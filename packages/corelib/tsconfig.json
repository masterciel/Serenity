{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./out",
    "emitBOM": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "ES2015",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "types": [
    ],
    "rootDir": "./src",
    "paths": {
      "@serenity-is/corelib/q": ["./src/q"],
      "@serenity-is/corelib/slick": ["./src/slick"],
      "@optionaldeps/*": ["./src/globals/*-module"]
    },
    "outDir": "./out",
    "target": "ES5",
    "lib": [
      "ES5",
      "ES2015",
      "DOM"
    ],
    "noEmitHelpers": false,
    "importHelpers": false,
    "jsx": "react"
  },
  "include": ["src"]
}