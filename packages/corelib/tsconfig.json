{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./out",
    "emitBOM": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "types": [
      "jest"
    ],
    "rootDir": "./src",
    "paths": {
      "@serenity-is/corelib/*": [
        "./src/*"
      ],
      "@optionaldeps/*": [
        "./src/globals/*-module"
      ]
    },
    "outDir": "./out",
    "target": "ES5",
    "lib": [
      "ES5",
      "ES2015",
      "DOM"
    ],
    "noEmitHelpers": false,
    "importHelpers": false,
    "jsx": "react-jsx",
    "jsxImportSource": "jsx-dom"
  },
  "include": [
    "src"
  ]
}