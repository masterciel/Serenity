<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1</TargetFrameworks>
    <TypeScriptExperimentalDecorators>True</TypeScriptExperimentalDecorators>
    <TypeScriptBuildMode>true</TypeScriptBuildMode>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="CodeGeneration\tsconfig.json" />
    <Content Include="CodeGeneration\tsconfig.json" />
    <None Remove="CoreLib\**\tsconfig.json" />
    <Content Include="CoreLib\**\tsconfig.json" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="node_modules\**" />
    <Compile Remove="node_modules\**" />
    <EmbeddedResource Remove="node_modules\**" />
    <TypeScriptCompile Remove="node_modules\**" />
    <ToMinimize Include="dist\**\*.js"></ToMinimize>
    <ToMinimize Include="..\Serenity.Assets\Scripts\jquery-ui.js"></ToMinimize>
    <ToMinimize Include="..\Serenity.Assets\Scripts\jquery.dialogExtendQ.js"></ToMinimize>
    <ToMinimize Include="..\Serenity.Assets\Scripts\SlickGrid\slick.grid.js"></ToMinimize>
    <ToMinimize Remove="dist\**\*.min.js"></ToMinimize>
    <ToSerenityLess Include="style\**\*.less"></ToSerenityLess>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="3.8.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <Target Name="NpmInstall" BeforeTargets="BeforeBuild">
    <Message Text="Installing NPM packages..." Importance="high">
    </Message>
    <Exec Command="npm install" />
  </Target>
  <Target Name="MinimizeScripts" AfterTargets="AfterBuild" Inputs="@(ToMinimize)" Outputs="@(ToMinimize->'%(RecursiveDir)%(Filename).min.js')">
    <Message Text="Minimizing %(ToMinimize.Identity)..." Importance="high"></Message>
    <Exec Command="node &quot;$(ProjectDir)node_modules/uglify-js/bin/uglifyjs&quot; &quot;$(ProjectDir)%(ToMinimize.RelativeDir)%(ToMinimize.Filename)%(ToMinimize.Extension)&quot; -o &quot;$(ProjectDir)%(ToMinimize.RelativeDir)%(ToMinimize.Filename).min.js&quot; --comments --mangle -b &quot;beautify=false, max_line_len=1000&quot; " />
  </Target>
  <Target Name="CompileSerenityLess" AfterTargets="AfterBuild" Inputs="@(ToSerenityLess)" Outputs="style\serenity.css">
    <Exec Command="node &quot;$(ProjectDir)node_modules/less/bin/lessc&quot; &quot;$(ProjectDir)style\serenity.less&quot; &gt; &quot;$(ProjectDir)style\serenity.css&quot;" />
  </Target>
</Project>