{
  "compileOnSave": false,
  "compilerOptions": {
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "declaration": false,
    "emitBOM": false,
    "noEmit": true,
    "sourceMap": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "target": "ES6",
    "typeRoots": [
      "../../types/",
      "../../node_modules/@types/",
    ],
    "types": [
      "jquery",
      "jest"
    ],
    "outDir": "../dist",
    "baseUrl": ".",
    "paths": {
    },
    "isolatedModules": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "ES5",
      "ES2015",
      "DOM"
    ],
    "noEmitHelpers": true,
    "jsx": "react"
  },
  "include": [
    "**/*.spec.ts"
  ]
}