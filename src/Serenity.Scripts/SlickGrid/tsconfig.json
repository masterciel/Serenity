{
  "compileOnSave": true,
  "compilerOptions": {
    "preserveConstEnums": false,
    "experimentalDecorators": true,
    "declaration": true,
    "emitBOM": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": [
      "../types"
    ],
    "types": [
      "jquery"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES6",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "noEmitHelpers": true
  },
  "files": [
    "slick.core.ts",
    "slick.grid.ts"
  ]
}