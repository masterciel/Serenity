{
  "compileOnSave": true,
  "compilerOptions": {
    "preserveConstEnums": false,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./dts",
    "emitBOM": true,
    "lib": [
      "ES2015",
      "DOM"
    ],
    "noEmit": true,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "../dist",
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../types"
    ],
    "types": [
      "jquery"
    ],
    "useDefineForClassFields": false,
    "target": "ESNext"
  },
  "include": [
    "./*.ts"
  ]
}