{
  "compileOnSave": true,
  "compilerOptions": {
    "preserveConstEnums": false,
    "experimentalDecorators": true,
    "declaration": true,
    "emitBOM": true,
    "noEmit": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./out",
    "declarationDir": "./dts",
    "typeRoots": [
      "../types"
    ],
    "types": [
      "jquery"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "target": "ESNext",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "noEmitHelpers": false
  },
  "include": [
    "./*.ts"
  ]
}