{
  "extends": "../src/tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "noEmit": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "types": [
      "jquery",
      "jquery.validation",
      "jqueryui",
      "jest",
      "node"
    ],
    "outDir": "../../dist/test",
    "baseUrl": ".",
    "paths": {
      "@/*": [ "../src/*" ],
      "@serenity-is/corelib/q": ["../src/q"],
      "@serenity-is/corelib/slick": ["../src/slick"]
    },
    "noImplicitAny": false,
    "lib": [
      "ES5",
      "ES2015",
      "DOM"
    ],
    "noEmitHelpers": false,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "include": [
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}