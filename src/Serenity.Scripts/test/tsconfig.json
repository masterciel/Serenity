{
  "compileOnSave": false,
  "compilerOptions": {
    "preserveConstEnums": false,
    "experimentalDecorators": true,
    "declaration": false,
    "emitBOM": false,
    "noEmit": true,
    "sourceMap": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "target": "ES5",
    "typeRoots": [
      "../types",
      "../node_modules/@types"
    ],
    "types": [
      "jquery",
      "jquery.validation",
      "jqueryui",
      "bootstrap",
      "toastr",
      "react",
      "jest",
      "node"
    ],
    "outDir": "./built",
    "baseUrl": ".",
    "paths": {
      "@CoreLib/*": ["../CoreLib/*"],
      "@Q/*": ["../CoreLib/Q/*"]
    },
    "isolatedModules": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "ES5",
      "ES2015",
      "DOM"
    ],
    "noEmitHelpers": false,
    "jsx": "react"
  },
  "include": [
    "../CoreLib/Globals/jQueryStatic.ts",
    "../CoreLib/Globals/Promise.ts",
    "../CoreLib/Globals/Select2.ts",
    "../CoreLib/Globals/Validate.ts",
    "../CoreLib/Slick/Globals.g.ts",
    "../CoreLib/Slick/Globals.ts",
    "../CoreLib/Serenity/Globals.ts",
    "../CoreLib/UI/Widgets/Globals.ts",
    "**/*.spec.ts"
  ]
}